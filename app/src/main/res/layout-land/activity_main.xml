<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityMain" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/tool_bar_top_padding"
        android:transitionName="actionBar" />

    <TextView
        android:id="@+id/cityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        />

    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/cityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidityTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        app:mtf_image="@drawable/ic_search_black_24dp"
        app:mtf_labelColor="#666">

        <EditText
            android:layout_width="187dp"
            android:layout_height="40dp"
            android:hint="Введите название города..."
            android:textColor="#333"
            android:textSize="10sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <TextView
        android:id="@+id/feelsLikeTextView"
        android:layout_below="@id/cityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        />

    <TextView
        android:id="@+id/celciumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feelsLikeTextView"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/windTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/celciumTextView"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/windTextView"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@id/toolbar"
        android:layout_toRightOf="@id/cityNameTextView"
        android:layout_marginLeft="20dp"

        />
    <Button
        android:id="@+id/enterButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/cityEditText"
        android:layout_below="@id/humidityTextView"
        android:background="@drawable/ic_search_black_24dp"
        />

   <me.ibrahimsn.lib.SmoothBottomBar
       android:id="@+id/bottomNavView"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       app:backgroundColor="@android:color/darker_gray"
       app:indicatorColor="@color/colorAccent"
       android:layout_alignParentBottom="true"
       app:menu="@menu/nav_menu"
       />


    <RelativeLayout
        android:id="@+id/RecyclerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottomNavView"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/enterButton"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecastRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_centerInParent="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/weatherStateImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/feelsLikeTextView"
        android:layout_below="@id/cityNameTextView"
        android:layout_marginLeft="10dp"
        />


</RelativeLayout>